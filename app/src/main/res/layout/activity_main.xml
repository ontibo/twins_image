    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/easyFlipViewOne"
        android:layout_width="201dp"
        android:layout_height="152dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        app:flipDuration="500"
        app:flipEnabled="false"
        app:flipOnTouch="true"
        >

        <ImageView
            android:layout_width="156dp"
            android:layout_height="173dp"
            android:layout_alignEnd="@+id/list_lang"
            android:layout_alignBottom="@+id/list_lang"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/list_lang"
            app:srcCompat="@drawable/card_one" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/list_lang"
            android:layout_alignBottom="@+id/list_lang"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/list_lang"
            app:srcCompat="@drawable/fortune" />


    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/list_lang"
        android:text="START" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="244dp"
        android:layout_toEndOf="@+id/list_lang"
        android:text="STOP" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="161dp"
        android:layout_toEndOf="@+id/list_lang"
        android:inputType="number"
        android:text="0"
        android:textSize="50dp" />


</RelativeLayout>
